  <header>
    <form accept-charset="UTF-8" method="get">
      <a href="/"><%= image_tag image_path('icons/logo.svg'), alt: :logo %></a>
    </form>
    <div>
      <a href="add.html"><%= link_to 'New Hotel', new_hotel_path %></a>
      <a href="pages/about">A propos</a>
    </div>
  </header>
  <section id="list">
    <% @hotels.each do |hotel| %>
      <div class="element">
        <div class="element__left">
          <%= image_tag hotel.image.url(:medium), class: 'element__left-img' %>
        </div>
        <div class="element__right">
          <h3><%= hotel.title %></h3>
          <span class="element__right-stars">
            <% case hotel.note %>
            <% when 1 %>
                <%= image_tag image_path('icons/star-f.svg') %>
            <% when 2 %>
                <%= image_tag image_path('icons/star-f.svg') %>
                <%= image_tag image_path('icons/star-f.svg') %>
            <% when 3 %>
                <%= image_tag image_path('icons/star-f.svg') %>
                <%= image_tag image_path('icons/star-f.svg') %>
                <%= image_tag image_path('icons/star-f.svg') %>
            <% when 4 %>
                <%= image_tag image_path('icons/star-f.svg') %>
                <%= image_tag image_path('icons/star-f.svg') %>
                <%= image_tag image_path('icons/star-f.svg') %>
                <%= image_tag image_path('icons/star-f.svg') %>
            <% when 5 %>
                <%= image_tag image_path('icons/star-f.svg') %>
                <%= image_tag image_path('icons/star-f.svg') %>
                <%= image_tag image_path('icons/star-f.svg') %>
                <%= image_tag image_path('icons/star-f.svg') %>
                <%= image_tag image_path('icons/star-f.svg') %>
           <% end %>
          </span>

          <!-- <h4>par <a href="#">Utilisateur</a></h4> -->
          <p><td><%= hotel.description %></td></p>
        </div>
      </div>
    <% end %>
  </section>
